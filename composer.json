{
    "name": "douglasgreen/linkchecker",
    "description": "Link Checking Program",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "LinkChecker\\": "src/"
        }
    },
    "require": {
        "php": ">=8.2.0"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "scripts": {
        "fix-php": "./vendor/bin/phpcbf",
        "lint-php": "./vendor/bin/phpcs && ./vendor/bin/phpmd bin,src text phpmd.xml"
    }
}

